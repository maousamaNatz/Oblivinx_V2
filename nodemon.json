{
  "watch": [
    "src/**/*",
    "index.ts",
    ".env"
  ],
  "ignore": [
    "node_modules/*",
    "dist/*",
    "src/**/*.test.ts", 
    "src/**/*.spec.ts",
    "src/db/logs/*",
    "src/db/sessions/*"
  ],
  "ext": "ts,json",
  "exec": "ts-node index.ts",
  "delay": 1000,
  "events": {
    "restart": "clear"
  },
  "verbose": false,
  "quiet": true,
  "stdout": false,
  "stderr": false
}
